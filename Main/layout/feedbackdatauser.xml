<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:background="#ffffff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"

        android:orientation="horizontal"
        >

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/dekho"
        android:layout_marginLeft="5dp"
        android:id="@+id/imageViewofcompany" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:paddingTop="10dp"
        android:textSize="18dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="How much are you satisfied with our shippment facility?"
        android:id="@+id/textViewquestion"
        android:layout_gravity="center_horizontal" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:id="@+id/imageViewemptystar1"
            android:onClick="rate"
            android:background="@drawable/fillstar"
            android:layout_marginLeft="0dp"  />

        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:id="@+id/imageViewemptystar2"
            android:onClick="rate"
            android:background="@drawable/fillstar"
            android:layout_marginLeft="5dp"  />
        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:id="@+id/imageViewemptystar3"
            android:background="@drawable/fillstar"
            android:onClick="rate"
            android:layout_marginLeft="5dp"  />
        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:onClick="rate"
            android:id="@+id/imageViewemptystar4"
            android:background="@drawable/outline"

            android:layout_marginLeft="5dp"  />
        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:id="@+id/imageViewemptystar5"
            android:background="@drawable/outline"
            android:onClick="rate"
            android:layout_marginLeft="5dp"  />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewline"
            android:layout_marginLeft="5dp"
            android:text="|"
            android:textSize="20dp"
            />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/imageViewheart"
            android:background="@drawable/hearts2"
            android:layout_marginLeft="5dp"  />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewreviewpersent"
            android:textColor="#484848"
            android:text=" 40%"
            android:textSize="15dp"
            />
          </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewreview"
                android:layout_marginLeft="5dp"
                android:text="Reviews >"
                android:textSize="14dp"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewreviewcount"
                    android:textColor="#ff8f00"
                    android:text="145687"
                    android:textSize="14dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#f1f8e9"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/imageViewstar1"
                        android:background="@drawable/ylove"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="5dp"  />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView1"
                        android:textColor="#757575"
                        android:text="5"
                        android:paddingTop="3dp"
                        android:textSize="18dp"
                        android:layout_marginLeft="6dp"
                        />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:id="@+id/textView1ratecolor"
                        android:textColor="#757575"
                        android:background="#66bb6a"
                        android:text="1250"
                        android:textSize="18dp"
                        android:layout_marginLeft="6dp"
                        />


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="26dp"
                        android:id="@+id/imageViewstar2"
                        android:background="@drawable/ghappy"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="2dp"  />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2"
                        android:textColor="#757575"
                        android:text="4"
                        android:paddingTop="3dp"
                        android:textSize="18dp"
                        android:layout_marginLeft="5dp"
                        />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:id="@+id/textView2ratecolor"
                        android:textColor="#757575"
                        android:background="#aed581"
                        android:text="924"
                        android:textSize="18dp"
                        android:layout_marginLeft="5dp"
                        />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageViewstar3"
                        android:background="@drawable/netral"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="4dp"  />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3"
                        android:textColor="#757575"
                        android:text="3"
                        android:paddingTop="3dp"
                        android:textSize="18dp"
                        android:layout_marginLeft="5dp"
                        />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:id="@+id/textView3ratecolor"
                        android:textColor="#757575"
                        android:background="#ffeb3b"
                        android:text="524"
                        android:textSize="18dp"
                        android:layout_marginLeft="3dp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="24dp"
                        android:id="@+id/imageViewstar4"
                        android:background="@drawable/rsad"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="8dp"  />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4"
                        android:textColor="#757575"
                        android:text="2"
                        android:paddingTop="3dp"
                        android:textSize="18dp"
                        android:layout_marginLeft="5dp"
                        />

                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:id="@+id/textView4ratecolor"
                        android:textColor="#757575"
                        android:background="#ffb74d"
                        android:text="124"
                        android:textSize="18dp"
                        android:layout_marginLeft="5dp"
                        />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageViewstar5"
                        android:background="@drawable/angry"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="5dp"  />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView5"
                        android:textColor="#757575"
                        android:text="1"
                        android:paddingTop="3dp"
                        android:textSize="18dp"
                        android:layout_marginLeft="5dp"
                        />

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="30dp"
                        android:id="@+id/textView5ratecolor"
                        android:textColor="#757575"
                        android:background="#ff8f00"
                        android:text="1025"
                        android:textSize="18dp"
                        android:layout_marginLeft="3dp"
                        />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
      </LinearLayout>

</LinearLayout>